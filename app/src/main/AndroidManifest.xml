<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/menu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/menu"
        android:supportsRtl="true"
        android:theme="@style/Theme.MenuAppli"
        tools:targetApi="31">

        <!-- PickersActivity -->
        <activity
            android:name=".PickersActivity"
            android:exported="false"
            android:label="@string/title_activity_pickers"
            android:theme="@style/Theme.MenuAppli" />

        <!-- DialogsActivity -->
        <activity
            android:name=".DialogsActivity"
            android:exported="false"
            android:label="@string/title_activity_dialogs"
            android:theme="@style/Theme.MenuAppli" />

        <!-- PopupMenuActivity -->
        <activity
            android:name=".PopupMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_popup_menu"
            android:theme="@style/Theme.MenuAppli" />

        <!-- OptionsMenuActivity -->
        <activity
            android:name=".OptionsMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_options_menu"
            android:theme="@style/Theme.MenuAppli" />

        <!-- ContextMenuActivity -->
        <activity
            android:name=".ContextMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_context_menu"
            android:theme="@style/Theme.MenuAppli" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
